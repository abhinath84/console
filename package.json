{
  "name": "console",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "reset": "npm run clear:npm && npm run bootstrap",
    "bootstrap": "npm i && npm run build",
    "install:dev": "npm i",
    "install:prod": "npm i --legacy-peer-deps --omit=dev",
    "prebuild": "npm run -ws prebuild",
    "build": "npx tsc --build",
    "postbuild": "npm run -ws postbuild",
    "lint": "npx eslint --max-warnings 0 .",
    "lint:fix": "npx eslint --fix --max-warnings 0 .",
    "lint:w": "npx eslint --max-warnings 0",
    "lint:w:fix": "npx eslint --max-warnings 0 --fix",
    "clear:npm": "npx rimraf ./node_modules && npm run -ws clear:npm",
    "clear:build": "npm run -ws clear:build",
    "docs:api": "npm run -ws docs:api",
    "docs:api:md": "npm run -ws docs:api:md",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Abhishek Nath",
  "license": "ISC",
  "workspaces": [
    "packages/lib/*",
    "packages/app"
  ],
  "devDependencies": {
    "@tsconfig/node16": "^16.1.0",
    "@types/amqplib": "^0.10.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.6",
    "@types/fs-extra": "^11.0.2",
    "@types/hbs": "^4.0.2",
    "@types/http-errors": "^2.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/js-yaml": "^4.0.5",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.6.2",
    "@types/npmlog": "^4.1.4",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/tar": "^6.1.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-formatter-gitlab": "^5.0.0",
    "eslint-plugin-import": "^2.28.1",
    "rimraf": "^5.0.1",
    "sass": "^1.63.6",
    "tar": "^6.1.15",
    "tslib": "^2.6.0",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "bugs": {
    "url": "https://github.com/abhinath84/console/issues/new"
  }
}
