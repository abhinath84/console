{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "composite": true,
    "module": "NodeNext",
    "lib": ["dom", "ES2022"],
    "target": "ES2022",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
