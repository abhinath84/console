{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["**/*.ts"]
}
