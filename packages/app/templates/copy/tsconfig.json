{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ES2022", "dom"],
    "target": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["**/*.ts"]
}
