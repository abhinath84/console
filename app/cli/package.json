{
  "name": "cli-builder",
  "version": "1.0.8",
  "description": "Generate project to implement command-line interface application",
  "type": "module",
  "preferGlobal": true,
  "bin": {
    "cli-builder": "./app/cli/src/bin/main.js"
  },
  "main": "./app/cli/src/bin/main.js",
  "scripts": {
    "start": "node --no-warnings=ExperimentalWarning ./app/cli/src/bin/main.js",
    "prebuild": "rimraf ./app",
    "build": "npx tsc -p ./tsconfig.json",
    "postbuild": "npm run templates:cp && npm run pkg:rma && npm run pkg:cp && npm run pkg:zip && npm run pkg:rm",
    "watch": "npx tsc -w -p ./tsconfig.json",
    "templates:cp": "copyfiles package.json ./app/cli/ && copyfiles -a ./src/templates/**/* ./app/cli/",
    "pkg:rma": "rimraf ./package/",
    "pkg:rm": "cd ./package && rimraf app package.json package-lock.json",
    "pkg:cp": "copyfiles -a ./app/**/* ./package/",
    "pkg:zip": "cd ./package && zip -r cli-builder.zip *",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "lint:gitlab": "set ESLINT_CODE_QUALITY_REPORT=eslint-gitlab-report.json && npx eslint --format gitlab .",
    "docs": "jsdoc -p -c ./jsdoc/config.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "figlet": "^1.5.2",
    "fs-extra": "^11.1.0",
    "hbs": "^4.2.0",
    "inquirer": "^9.1.4",
    "is-url-http": "^2.3.5",
    "npmlog": "^7.0.1",
    "spdx-expression-validate": "^2.0.0"
  },
  "bugs": {
    "url": "https://github.com/abhinath84/cli-builder/issues/new"
  },
  "keywords": [
    "cli",
    "node",
    "commander"
  ],
  "author": "Abhishek Nath",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/fs-extra": "^11.0.1",
    "@types/hbs": "^4.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.13.0",
    "@types/npmlog": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "copyfiles": "^2.4.1",
    "docdash": "^2.0.1",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-formatter-gitlab": "^4.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jsdoc": "^4.0.0",
    "minami": "^1.2.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
